<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="danielandanthony.dungeonsanddragons.ActivityCharacterSheet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Character Sheet"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/characterName"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/armorClass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spellHealingBonus"
        android:text="SHB"
        android:layout_below="@+id/spellDamageBonus"
        android:layout_alignEnd="@+id/bowDamageBonus"
        android:layout_above="@+id/wisMod"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/armorClass"
        android:text="Armor Class"
        android:layout_below="@+id/characterName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/con"
        android:text="Con"
        android:layout_below="@+id/armorClass"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/str"
        android:layout_below="@+id/con"
        android:layout_alignParentStart="true"
        android:text="Str" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dex"
        android:text="Dex"
        android:layout_below="@+id/str"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inT"
        android:text="Int"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dex"
        android:layout_alignEnd="@+id/con" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wis"
        android:layout_below="@+id/inT"
        android:layout_alignParentStart="true"
        android:text="Wis" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cha"
        android:text="Cha"
        android:layout_below="@+id/wis"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conMod"
        android:text="CoM"
        android:layout_above="@+id/strMod"
        android:layout_alignStart="@+id/dexMod" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strMod"
        android:text="StM"
        android:layout_below="@+id/con"
        android:layout_toEndOf="@+id/str" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dexMod"
        android:text="DeM"
        android:layout_below="@+id/strMod"
        android:layout_toEndOf="@+id/inT" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intMod"
        android:text="InM"
        android:layout_below="@+id/dexMod"
        android:layout_toEndOf="@+id/inT" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wisMod"
        android:text="WiM"
        android:layout_above="@+id/cha"
        android:layout_toEndOf="@+id/cha" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chaMod"
        android:text="ChM"
        android:layout_below="@+id/wisMod"
        android:layout_toEndOf="@+id/cha" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swordAttackBonus"
        android:text="SAB"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bowAttackBonus"
        android:text="BAB"
        android:layout_below="@+id/swordAttackBonus"
        android:layout_alignStart="@+id/swordAttackBonus"
        android:layout_alignEnd="@+id/swordAttackBonus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swordDamageBonus"
        android:text="SDB"
        android:layout_below="@+id/bowAttackBonus"
        android:layout_alignEnd="@+id/bowAttackBonus"
        android:layout_alignStart="@+id/bowAttackBonus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bowDamageBonus"
        android:layout_below="@+id/swordDamageBonus"
        android:layout_alignStart="@+id/swordDamageBonus"
        android:text="BDB"
        android:layout_alignEnd="@+id/swordDamageBonus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spellDamageBonus"
        android:text="SpDB"
        android:layout_below="@+id/bowDamageBonus"
        android:layout_alignStart="@+id/bowDamageBonus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrows"
        android:text="Ars"
        android:layout_below="@+id/spellHealingBonus"
        android:layout_alignStart="@+id/spellHealingBonus"
        android:layout_alignEnd="@+id/spellHealingBonus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spellsPerDay"
        android:text="SPD"
        android:layout_below="@+id/arrows"
        android:layout_alignStart="@+id/spellHealingBonus"
        android:layout_alignEnd="@+id/arrows" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AC:"
        android:id="@+id/textView4"
        android:layout_alignEnd="@+id/characterName"
        android:layout_above="@+id/swordDamageBonus"
        android:layout_below="@+id/spellDamageBonus" />

</RelativeLayout>
